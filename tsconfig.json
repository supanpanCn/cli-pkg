{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "lib": ["esnext"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "jsx": "preserve",
      "strictNullChecks": true,
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*",
      "*.d.ts"
    ],
    "exclude": ["node_modules", "dist"]
  }
  